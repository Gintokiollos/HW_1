<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="5"
    android:padding="16dp">

    <!-- Row 1 -->
    <Button
        android:text="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <Button
        android:text="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <Button
        android:text="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>

    <!-- Row 2 -->
    <Button
        android:text="4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <Button
        android:text="5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <Button
        android:text="6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>

    <!-- Row 3 -->
    <Button
        android:text="7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <Button
        android:text="8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <Button
        android:text="9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>

    <!-- Row 4 -->
    <Button
        android:text="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <Button
        android:text="+"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <Button
        android:text="-"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>

    <!-- Row 5 -->
    <Button
        android:text="*"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <Button
        android:text="/"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <Button
        android:text="="
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
    <!---->
    <Button
        android:id="@+id/back5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="返回"
        android:visibility="invisible" />

    <Button
        android:id="@+id/back5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="返回"
        android:visibility="invisible" />
    <Button
        android:id="@+id/back5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="返回" />
</GridLayout>
